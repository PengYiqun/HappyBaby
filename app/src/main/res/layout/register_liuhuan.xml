<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.hh.happybaby.MainActivity_">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_liuhuan"
        android:layout_marginTop="5dp">

        <!--用户名-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:textSize="23dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:text="  用户名"
            android:id="@+id/username"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/username"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/shape_liuhuan"
            android:hint="请输入用户名"
            android:id="@+id/username_input"/>

        <!--密码-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/username"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="10dp"
            android:textSize="23dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:text="   密码"
            android:id="@+id/password"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/username_input"
            android:layout_toRightOf="@+id/username"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/shape_liuhuan"
            android:hint="请输入6-16位密码"
            android:id="@+id/password_input"/>

        <!--确认密码-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/password"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="10dp"
            android:textSize="23dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:text="确认密码"
            android:id="@+id/confirmation1"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/password_input"
            android:layout_toRightOf="@+id/confirmation1"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/shape_liuhuan"
            android:hint="请再次输入密码"
            android:id="@+id/confirmation1_input"/>

    <!--密保问题-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/confirmation1"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="10dp"
        android:textSize="23dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:text="密保问题"
        android:id="@+id/problem1"/>

        <!--删了一行-->
        <!-- android:entries="spinner" -->
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/confirmation1_input"
        android:layout_toRightOf="@+id/problem1"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/shape_liuhuan"

        android:id="@+id/problem1_input"/>

        <!--密保答案-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/problem1"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="10dp"
            android:textSize="23dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:text="密保答案"
            android:id="@+id/answer1"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/problem1_input"
            android:layout_toRightOf="@+id/answer1"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/shape_liuhuan"
            android:hint="请输入密保答案"
            android:id="@+id/answer1_input"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/answer1"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            android:text="注册"
            android:textSize="23dp"
            android:background="@drawable/button_liuhuan"
            android:id="@+id/register"/>
        </RelativeLayout>
</RelativeLayout>
