<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.hh.happybaby.MainActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_liuhuan"
        android:layout_marginTop="50dp">

        <!--重设密码-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:text="重设密码"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:id="@+id/text1"/>

        <!--新密码-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text1"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/size1"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text=" 新密码"
            android:id="@+id/newpassword"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text1"
            android:layout_toRightOf="@+id/newpassword"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="35dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/shape_liuhuan"
            android:hint="请输入6-16位密码"
            android:id="@+id/newpassword_input"/>

        <!--确认密码-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/newpassword"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/size1"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="确认密码"
            android:id="@+id/confirmation2"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/newpassword_input"
            android:layout_toRightOf="@+id/confirmation2"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="35dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/shape_liuhuan"
            android:hint="请再次输入密码"
            android:id="@+id/confirmation2_input"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/confirmation2"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            android:text="确定"
            android:textSize="@dimen/size1"
            android:background="@drawable/button_liuhuan"/>
    </RelativeLayout>
</RelativeLayout>
